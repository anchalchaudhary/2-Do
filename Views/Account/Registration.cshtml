@model ToDoList.Models.User
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<form id="RegistrationForm">
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Your name here..." })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Your username here..." })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Your Email here..." })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Your password here..." })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" onclick="RegisterUser()" value="SUBMIT" class="btn btn-primary" />
        </div>
    </div>
</form>
<script>
